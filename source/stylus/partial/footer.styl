@import '../constants'

.paginator
    margin 6em 0
    height 32px
    text-align center
    .prev, .next
        float left
        margin 0 4px
        padding 4px 12px
        border-radius 4px
        border 1px solid transparent
        font-size 14px
        color text-color-gray
        transition all .3s
        &:hover
            color text-color
            border-color text-color-light
    .next
        float right

.ds-thread,
#disqus_thread
    margin-bottom 2em